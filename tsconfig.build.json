{
    "compilerOptions": {
        "jsx": "react-jsx",
        "allowJs": true,
        "baseUrl": "./src",
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "node",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "sourceMap": true,
        "skipDefaultLibCheck": true,
        "allowImportingTsExtensions": true,
        "emitDeclarationOnly": false,
        "paths": {
            "antd": [
                "node_modules/antd"
            ],
        }
    },
    "include": [
        "src/materials/**/*",
        "global.d.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}