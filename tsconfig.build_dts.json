{
    "compilerOptions": {
        "jsx": "react-jsx",
        "allowJs": true,
        "baseUrl": "./src",
        "target": "ESNext",
        "module": "NodeNext",
        "moduleResolution": "nodenext",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "sourceMap": true,
        "skipDefaultLibCheck": true,
        // "allowImportingTsExtensions": true,
        "emitDeclarationOnly": false,
        "paths": {
            "antd": [
                "node_modules/antd"
            ],
            "@/*": [
                "*"
            ]
        },
    },
    "include": [
        "src/materials/**/*" // 包含所有 .ts, .tsx, .js, .jsx 文件
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}